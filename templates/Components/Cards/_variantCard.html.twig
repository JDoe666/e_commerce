<label class="card-variant" for="add_to_cart_form_productVariant_{{ productVariant.id }}">
	<input type="radio" class="input-radio-add-to-cart" name="add_to_cart_form[productVariant]" id="add_to_cart_form_productVariant_{{ productVariant.id }}" value="{{ productVariant.id }}">
	<p class="card-variant-size">{{ productVariant.size }}</p>
	<p class="card-variant-price">{{ priceTTC(productVariant)|format_currency('EUR') }}</p>
</label>
